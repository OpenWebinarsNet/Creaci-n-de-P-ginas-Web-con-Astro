---
import { getCollection } from "astro:content";

const authors = await getCollection("authors");
---

<div class="authors-list">
    <h3 class="mb-4">Autores</h3>
    <div>
        {
            authors.map((author) => (
                <div>
                    <img src={author.data.image} />
                    <h4>{author.data.name}</h4>
                </div>
            ))
        }
    </div>
</div>

<style>
    .authors-list div {
        display: flex;
        align-items: center;
        gap: 20px;
        margin-bottom: 1rem;
    }

    .authors-list img {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        margin-right: 1rem;
    }

    .authors-list h4 {
        margin: 0;
        font-size: 1rem;
    }
</style>
